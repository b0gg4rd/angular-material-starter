doctype html
html(
  lang='en',
  ng-app='starter'
)
  head
    title Angular Material - Starter App

    meta(charset='utf-8')
    meta(
      http-equiv='X-UA-Compatible',
      content='IE=edge'
    )
    meta(
      name='description',
      content='Angular Material Starter App'
    )
    meta(
      name='viewport',
      content='initial-scale=1'
    )

    link(
      href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic',
      rel='stylesheet'
    )
    link(
      href='bower_components/angular-material/angular-material.css',
      rel='stylesheet'
    )
    link(
      href='styles.css',
      rel='stylesheet'
    )

  body(
    layout='column',
    ng-controller='UserController as userController',
    ng-cloak
  )

    md-toolbar(layout='row')
      md-button.menu(
        hide-gt-sm,
        ng-click='userController.toggleList()'
      )
        md-icon(md-svg-icon='menu')
      h1 Angular Material - Starter App

    div(
      flex,
      layout='row'
    )
      md-sidenav(
        md-is-locked-open='$mdMedia("gt-sm")',
        md-component-id='left',
        ng-click='userController.toggleList()'
      )
        md-list
          md-list-item(ng-repeat='user in userController.users')
            md-button(
              ng-class='{ "selected" : user === userController.selected }',
              ng-click='userController.selectUser(user)'
            )
              md-icon.avatar(md-svg-icon='{{ user.avatar }}')
              | {{ user.name }}

      md-content(
        flex,
        id='content'
      )
        md-icon.avatar(md-svg-icon='{{ userController.selected.avatar }}')
        h2 {{ userController.selected.name }}
        p
          | {{ userController.selected.content }}
        md-button.share(
          md-no-ink,
          ng-click='userController.share(userController.selected)'
        )
          md-icon(md-svg-icon='share')

    script(
      src='bower_components/angular/angular.js',
      type='text/javascript'
    )
    script(
      src='bower_components/angular-animate/angular-animate.js',
      type='text/javascript'
    )
    script(
      src='bower_components/angular-aria/angular-aria.js',
      type='text/javascript'
    )
    script(
      src='bower_components/angular-material/angular-material.js',
      type='text/javascript'
    )

    //- Users module
    script(
      src='users/module.js',
      type='text/javascript'
    )
    script(
      src='users/ctrl.js',
      type='text/javascript'
    )
    script(
      src='users/srv.js',
      type='text/javascript'
    )

    //- App module
    script(
      src='module.js',
      type='text/javascript'
    )
    script(
      src='config.js',
      type='text/javascript'
    )
    script(
      src='ctrl.js',
      type='text/javascript'
    )

